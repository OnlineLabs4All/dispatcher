{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    <div class="col-lg-12">
        <h3 class="page-header">{{ viewName }}</h3>
    </div>
    <div class="col-lg-12">

    <div class="panel panel-info">
        <div class="panel-heading">
            Mapper Lab Servers
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Lab Server Name</th>
                        <th>Owner</th>
                        <th>Lab Server Type</th>
                        <th>Mapping Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for labserver in labservers %}

                        <tr class="odd gradeX">
                            <td>{{ labserver.id }}</td>
                            <td>{{ labserver.name }}</td>
                            <td>{{ labserver.contactName }}</td>
                            <td>{{ labserver.type }}</td>
                            <td>
                                {% if labserver.mapped == true %}
                                    <a href="{{ path('rlms_ls_mapping') }}/{{ rlmsId }}?labServerId={{ labserver.id }}&newMapping=0"><button type="button" class="btn btn-success btn-sm"><i class="fa fa-link"></i> Associated</button></a>
                                {% elseif labserver.mapped == false %}
                                    <a href="{{ path('rlms_ls_mapping') }}/{{ rlmsId }}?labServerId={{ labserver.id }}&newMapping=1"><button type="button" class="btn btn-danger btn-sm"><i class="fa fa-times"></i> Dissociated</button></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>

{% endblock %}