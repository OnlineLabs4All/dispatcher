{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    <div class="col-lg-12">
        <h3 class="page-header">{{ viewName }}</h3>
    </div>
    <p>
        <a href="{{ path('add_edit_labserver') }}" class="btn btn-success">Create new Lab Server</a>
    </p>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>ID</th>
            <th>APIs</th>
            <th>Lab Server Name</th>
            <th>Owner Institution</th>
            <th>Active</th>
            <th>Date Created</th>
        </tr>
        </thead>
        <tbody>
        {%  for record in records %}

            <tr class="odd gradeX">
                <td>{{ record.id }} (<a href="{{ path('labservers') }}/{{ record.id }}">view/edit</a>)</td>
                <td><a href="{{ path('apis_to_rlms', { 'labServerId' : record.id}) }}">view APIs</a></td>
                <td>{{ record.name }}</td>
                <td>{{ record.institution }}</td>
                <td>{{ record.active }}</td>
                <td>{{ record.dateCreated }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}