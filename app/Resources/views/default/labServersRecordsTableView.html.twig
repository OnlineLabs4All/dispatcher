{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    <div class="col-lg-12">
        <h3 class="page-header">{{ viewName }}</h3>
    </div>
    <p>
        <a href="{{ path('add_edit_labserver') }}" class="btn btn-success"><i class="fa fa-cloud-upload"></i> Create new Lab Server</a>
    </p>

    <div class="panel panel-info">
    <div class="panel-heading">
        Available Lab Servers
    </div>
    <div class="panel-body">
    <div class="table-responsive">
    <table class="table table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>ID</th>
            <th>APIs</th>
            <th>Lab Server Name</th>
            <th>Owner</th>
            <th>Active</th>
            <th>Date Created</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {%  for record in records %}

            <tr class="odd gradeX">
                <td>{{ record.id }}</td>
                <td><a href="{{ path('apis_to_rlms', { 'labServerId' : record.id}) }}">view APIs</a></td>
                <td>{{ record.name }}</td>
                <td>{{ record.institution }}</td>
                <td>{{ record.active }}</td>
                <td>{{ record.dateCreated }}</td>
                <td><a href="{{ path('labservers') }}/{{ record.id }}"><i class="fa fa-edit fa-fw"></i>view/edit</a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    </div>
    </div>
    </div>

{% endblock %}