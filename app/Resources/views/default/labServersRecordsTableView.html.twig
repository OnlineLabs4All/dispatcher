{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    <div class="panel panel-primary">
    <div class="panel-heading">
        Available Lab Servers
    </div>
    <div class="panel-body">
        <a href="{{ path('add_edit_labserver') }}" class="btn btn-success"><i class="fa fa-cloud-upload"></i> Create new Lab Server</a>
    <div class="table-responsive">
    <table class="table table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>APIs</th>
            <th>ID</th>
            <th>Status</th>
            <th>Name</th>
            <th>Owner</th>
            <th>View/Edit</th>
        </tr>
        </thead>
        <tbody>
        {%  for record in records %}

            <tr class="odd gradeX">
                <td>
                    <a href="{{ path('apis_to_rlms', { 'labServerId' : record.id}) }}">
                       <i class="fa fa-gear"></i>
                    </a>
                </td>
                <td>{{ record.id }}</td>
                <td>
                    {% if record.active == true %}
                        <span class="label label-success">Active</span>
                    {% elseif record.active == false %}
                        <span class="label label-danger">Not Active</span>
                    {% else %}
                        {{ record.active }}
                    {% endif %}

                </td>
                <td>{{ record.name }}</td>
                <td>{{ record.ownerFirstName }} {{ record.ownerLastName }} ({{ record.ownerUsername }})</td>
                <td>
                    <a href="{{ path('labservers') }}/{{ record.id }}">
                        <i class="fa fa-edit"> view/edit</i>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    </div>
    </div>
    </div>

{% endblock %}