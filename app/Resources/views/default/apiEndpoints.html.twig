{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    <div id="header" class="col-lg-12">
        <h3 id="header3" class="page-header">APIs for "{{ labServerName }}"</h3>
    </div>
    <p>The following APIs can be used an RLMS to interact with this Lab Server.</p>

    {% for api in apis %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-green">
                <div class="panel-heading">
                    {{ api.name }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->
                    <!-- Tab panes -->
                    <div class="tab-content">

                       <p><i class="fa fa-gear fa-fw"></i> SOAP API Endpoint: <code>{{ api.soap_endpoint }}</code></p>
                       <p><i class="fa fa-book fa-file-o"></i> WSDL: <code><a href="{{ api.wsdl }}" target="_blank" >{{ api.wsdl }}</a></code></p>
                       <p><i class="fa fa-gear fa-fw"></i> JSON API Endpoint: <code>{{ api.json_endpoint }}</code></p>
                       <p><i class="fa fa-book fa-eye"></i> GUID: <code>{{ api.guid }}</code></p>
                       <p><i class="fa fa-book fa-key"></i> PassKey: <code>{{ api.passkey }}</code></p>
                       <p><i class="fa fa-book fa-key"></i> Initial PassKey: <code>{{ api.initialPasskey }}</code></p>
                       <p><i class="fa fa-book fa-info-circle"></i> {{ api.info }}</p>
                    </div>
                </div>
                <!-- /.panel-body -->


            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
    {% endfor %}

{% endblock %}