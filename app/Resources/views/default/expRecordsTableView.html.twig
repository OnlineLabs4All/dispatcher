{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    <div class="col-lg-12">
        <h3 class="page-header">{{ viewName }}</h3>
    </div>

        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            
            <th>ID</th>
            <th>RLMS ID</th>
            <th>Status</th>
            <th>processing Engine</th>
            <th>Lab Server ID</th>
        </tr>
        </thead>
        <tbody>
    {%  for record in records %}

        <tr class="odd gradeX">
            <td>{{ record.expID }} (<a href="{{ path('expRecords') }}/{{ record.expID }}">view</a>)</td>
            <td>{{ record.providerId }}</td>
            <td>{{ record.jobStatus }}</td>
            <td class="center">{{ record.processingEngine }}</td>
            <td class="center">{{ record.labServerId }}</td>
        </tr>
       {% endfor %}

        </tbody>
        </table>

{% endblock %}