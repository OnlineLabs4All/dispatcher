{% extends 'adminBase.html.twig' %}

{% block mainPanel %}


    <div class="col-lg-12">
        <h3 class="page-header">{{ viewName }}</h3>
    </div>
    <p>
    <a href="{{ path('add_engine') }}" class="btn btn-success">Create new Engine</a>
    </p>

    <table class="table table-striped table-bordered table-hover" id="dataTable">
        <thead>
        <tr>

            <th>ID</th>
            <th>Lab Server</th>
            <th>API Key</th>
            <th>Owner Institution</th>
            <th>City</th>
            <th>Country</th>
        </tr>
        </thead>
        <tbody>
        {%  for record in records %}

            <tr class="odd gradeX">
                <td>{{ record.id }} (<a href="{{ path('engine') }}/{{ record.id }}">view/edit</a>)</td>
                <td>{{ record.labserverId }}</td>
                <td>{{ record.apiKey }}</td>
                <td>{{ record.institution }}</td>
                <td>{{ record.city }}</td>
                <td>{{ record.country }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>


    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                responsive: true
            });
        });
    </script>

{% endblock %}