{% extends 'adminBase.html.twig' %}

{% block mainPanel %}


    <div class="col-lg-12">
        <h3 class="page-header">{{ viewName }}</h3>
    </div>
    <p>
    <a href="{{ path('add_engine') }}" class="btn btn-success">Create new Engine</a>
    </p>

    <div class="panel panel-info">
    <div class="panel-heading">
        <p class="fa fa-cog"> Registered Experiment Engines</p>
    </div>
    <div class="panel-body">
    <table class="table table-hover" id="dataTable">
        <thead>
        <tr>

            <th>ID</th>
            <th>Lab Server</th>
            <th>API Key</th>
            <th>Owner Institution</th>
            <th>City</th>
            <th>Country</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {%  for record in records %}

            <tr class="odd gradeX">
                <td>{{ record.id }}</td>
                <td>{{ record.labserverId }}</td>
                <td>{{ record.apiKey }}</td>
                <td>{{ record.institution }}</td>
                <td>{{ record.city }}</td>
                <td>{{ record.country }}</td>
                <td><a href="{{ path('engine') }}/{{ record.id }}"><i class="fa fa-edit fa-fw"></i>view/edit</a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    </div>
    </div>


    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                responsive: true
            });
        });
    </script>

{% endblock %}