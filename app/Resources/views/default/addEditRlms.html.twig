{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    {{ form_start(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    {{ viewName }}
                </div>
                <div class="panel-body">

                    {{ form_errors(form) }}

                    {{ form_row(form.rlms_type) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.contact_name) }}
                    {{ form_row(form.contact_email) }}
                    {{ form_row(form.institution) }}
                    {{ form_row(form.service_description_url) }}
                    {{ form_row(form.active) }}


                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <p class="text-primary"> ISA-RLMS Specific Information </p>
                </div>
                <div class="panel-body">
                    {{ form_row(form.guid) }}
                    {{ form_row(form.service_url) }}
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <p class="text-primary">WebLab Deusto-RLMS Specific Information</p>
                </div>
                <div class="panel-body">

                    {{ form_row(form.rlms_username) }}
                    {{ form_row(form.rlms_password) }}

                </div>
            </div>
        </div>

    </div>

    {{ form_row(form.submit) }}
    {{ form_end(form) }}

{% endblock %}