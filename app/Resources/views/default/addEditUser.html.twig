{% extends 'adminBase.html.twig' %}

{% block mainPanel %}

    {{ form_start(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    User Information
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}
					{% if exception|default %}
						<div class="alert alert-danger">
						{{ message }}
						</div>
					{% endif %}

					<div class="row">
						<div class="col-xs-6">{{ form_row(form.username) }}</div>
					</div>
					<div class="row">
						<div class="col-xs-6">{{ form_row(form.firstName) }}</div>
						<div class="col-xs-6">{{ form_row(form.lastName) }}</div>
					</div>
					<div class="row">
						<div class="col-xs-6">{{ form_row(form.email) }}</div>
					</div>
					<div class="row">
						<div class="col-xs-6">{{ form_row(form.password.first) }}</div>
						<div class="col-xs-6">{{ form_row(form.password.second) }}</div>
					</div>
					<div class="row">
						<div class="col-xs-6">{{ form_row(form.role) }}</div>
					</div>
					<div class="alert alert-warning">
						{{ form_row(form.isActive) }}
						<p class="fa fa-warning"></p>
						If active, the user is able to login.
					</div>

                </div>
            </div>
        </div>


    </div>


    {{ form_row(form.submit) }}


    {{ form_end(form) }}


{% endblock %}

